# Usa la imagen oficial de WordPress como base
FROM wordpress:6.7.1

# Instalar ping y mysql-client
RUN apt-get update && \
    apt-get install -y iputils-ping default-mysql-client && \
    rm -rf /var/lib/apt/lists/*


